---
import Base from "../layouts/Base.astro";

import navlinks  from "../data/navlinks.json";
import hero      from "../data/hero.json";
import about     from "../data/about.json";
import partners  from "../data/partners.json";
import services  from "../data/services.json";
import community from "../data/community.json";
import footer    from "../data/footer.json";
---

<Base title="DevOps Manaus – Transformando o Futuro Tech da Amazônia">
    <div class="particles" id="particles"></div>

    <header>
        <nav>
            <div class="logo">DevOps Manaus</div>
            <ul class="nav-links">
                {navlinks.map(link => (
                        <li><a href={link.href}>{link.label}</a></li>
                ))}
            </ul>
        </nav>
    </header>

    <section id="home" class="hero">
        <div class="hero-content">
            <h1>{hero.title}</h1>
            <p class="subtitle">{hero.subtitle}</p>
            <div class="lema">{hero.lema}</div>
            <div>
                {hero.ctas.map(cta => (
                        <a href={cta.href}
                           class={`cta-button ${cta.variant === 'secondary' ? 'cta-secondary' : ''}`}>
                            {cta.label}
                        </a>
                ))}
            </div>
        </div>
    </section>

    <section id="about">
        <h2 class="section-title">Quem Somos</h2>
        <div class="grid">
            {about.map(item => (
                    <div class="card">
                        <h3>{item.heading}</h3>
                        <p>{item.text}</p>
                    </div>
            ))}
        </div>
    </section>

    <section id="partners">
        <h2 class="section-title">Parceiros</h2>
        <div class="grid">
            {partners.map(p => (
                    <div class="card text-center">
                        <img src={p.img} alt={p.name} class="w-32 h-32 rounded-full mb-4 mx-auto" />
                        <h3>{p.name}</h3>
                        <p>
                            {p.links.map((link, i) => (
                                    <>
                                        <a href={link.url} target="_blank">{link.label}</a>
                                        {i < p.links.length - 1 && " — "}
                                    </>
                            ))}
                        </p>
                    </div>
            ))}
        </div>
    </section>

    <section id="services">
        <h2 class="section-title">O Que Fazemos</h2>
        <div class="grid">
            {services.map(s => (
                    <div class="card">
                        <h3>{s.icon} {s.title}</h3>
                        <p>{s.text}</p>
                    </div>
            ))}
        </div>
    </section>

    <section id="community">
        <h2 class="section-title">Nossa Comunidade</h2>
        <div class="stats">
            {community.stats.map(stat => (
                    <div class="stat">
                        <span class="stat-number">{stat.value}</span>
                        <span class="stat-label">{stat.label}</span>
                    </div>
            ))}
        </div>
        <div class="card">
            <h3>{community.card.heading}</h3>
            <p>{community.card.text}</p>
        </div>
    </section>

    <footer id="contact">
        <div class="footer-content">
            <div class="social-links">
                {footer.social.map(s => (
                        <a href={s.url} title={s.name}>{s.icon}</a>
                ))}
            </div>
            <p>{footer.text}</p>
            <p class="text-gray-500 mt-2">{footer.location}</p>
        </div>
    </footer>
</Base>